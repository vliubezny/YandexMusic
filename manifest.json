{
  "manifest_version": 2,
  "name": "Yandex Music Extention",
  "description": "This extention adds global hotkeys binding and tray notification for Yandex Music service.",
  "version": "1.0",
  "icons": {"128": "icon128.png"},
  "options_page": "options.html",

  "page_action": {
    "default_title": "Yandex Player: enable/disable hotkeys",
    "default_icon": "disabled.png"
  },

  "background": {
    "scripts": ["bg.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "tabs", "storage"
  ],

  "commands": {
    "playPause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "global": true,
      "description": "Toggle play/pause"
    },
    "playNext": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "global": true,
      "description": "Play next track"
    },
    "playPrev": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "global": true,
      "description": "Play previous track"
    }
  }
}
